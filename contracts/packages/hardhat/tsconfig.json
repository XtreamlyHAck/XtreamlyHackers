{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true // Add this line to allow JavaScript files
  },
  "include": [
    "**/*.ts",
    "**/*.js" // Add this line to include JavaScript files in the compilation
  ]
}